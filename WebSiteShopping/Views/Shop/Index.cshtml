@using System.Drawing
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
@model Microsoft.EntityFrameworkCore.Query.Internal.EntityQueryable<WebSiteShopping.Models.Product>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/cssCustomer/Shop.css" rel="stylesheet" />
</head>
<body>
    <div class="filter-section">
        <form asp-controller="Shop" asp-action="Index" method="get" class="filter-form">
            <div class="filter-group">
                <select name="from" class="filter-select">
                    <option value="">Lọc theo giá</option>
                    <option value="0">0 - 5.000.000đ</option>
                    <option value="5000000">5.000.000đ - 10.000.000đ</option>
                    <option value="10000000">10.000.000đ - 15.000.000đ</option>
                    <option value="15000000">15.000.000đ - 20.000.000đ</option>
                    <option value="20000000">20.000.000đ - 25.000.000đ</option>
                    <option value="25000000">Trên 25.000.000đ</option>
                </select>
            </div>
            <div class="filter-group">
                <select name="mau" class="filter-select">
                    <option value="">Lọc theo màu</option>
                    @foreach (var c in ViewBag.Color)
                    {
                        <option value="@c">@c</option>
                    }
                </select>
            </div>
            <div class="filter-group">
                <select name="loai" class="filter-select">
                    <option value="">Lọc theo loài</option>
                    @foreach (var s in ViewBag.Species)
                    {
                        <option value="@s">@s</option>
                    }
                </select>
            </div>
            <button type="submit" class="filter-button">Tìm kiếm</button>
        </form>
    </div>
<section class="featured spad">
    <div class="container">
        <div class="row featured__filter">
            @foreach(var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@Url.Content("../ProductImg/"+item.Image)">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="Cart/AddtoCart?productId=@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.Name</a></h6>
                            <h5>@item.Price</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
</body>
</html>